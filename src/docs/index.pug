                    input(class="c-input")

                button(class="c-button c-button_small c-button_default")
                    .c-button__inner КнопкаT


            div(style="margin-top:20px")
                span.c-input__wrap.c-input__warning
                    input.c-input(value="Предупреждение")

            div(style="margin-top:20px")
                span.c-input__wrap.c-input__error
                    input.c-input(value="Ошибка")


            table(style="margin-top:20px")
