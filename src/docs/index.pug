doctype html
html(lang="en")
    head
        title Page Title
        link(rel="stylesheet" href="full.css")
        script(type="text/javascript")
            | function loaderExample(el) {
            |     var currentClassName = el.className;
            |     var loadingClass = 'c-button_loading';
            |     if (new RegExp('\\s+'+loadingClass+'\\s+').test(currentClassName + ' ')) {
            |         return;
            |     }
            |     el.className = currentClassName + ' ' + loadingClass;
            |     setTimeout(function(){
            |         el.className = (el.className + ' ').replace(new RegExp('\\s+' + loadingClass + '\\s+', 'g'), ' ');
            |     }, 2 * 1000);
            | }

    body
        div(style="width:460px;margin:0 auto")
            h1 Bootstrap

            div
                p Обычный текст

            div(style="margin-top: 50px")

            div(style="float:left;")
                button(class="c-button c-button_small c-button_primary" ondragstart="return false")
                    .c-button__inner Главная кнопка

            div(style="float:left; margin-left: 20px;")
                button(class="c-button c-button_small c-button_default")
                    .c-button__inner Второстепенная кнопка

            div(style="clear:both;")

            div(style="margin-top: 20px;")
                button(class="c-button c-button_small c-button_primary c-button_disabled")
                    .c-button__inner Неактивная кнопка

            div(style="margin-top: 20px;")
                button(class="c-button c-button_small c-button_default" onclick="loaderExample(this);")
                    .c-button__inner Нажми для загрузки

            div(style="clear:both; padding-top: 30px;")

            h2 Размеры кнопок

            div(style="float:left;")
                button(class="c-button c-button_small c-button_default")
                    .c-button__inner Кнопка

            div(style="float:left; margin-left: 10px;")
